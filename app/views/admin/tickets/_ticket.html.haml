%table.table.table-bordered
  %thead.thead-default
    %tr
      %th Номер билета
      %th Пользователь
      %th Поезд номер
      %th Фамилия
      %th Имя
      %th Отчество
      %th Станция отправления
      %th Станция прибытия
      %th{:colspan => "3"}
  %tbody
    %tr
      %td
        = ticket.id
      %td
        = ticket.user.email
      %td 
        = ticket.train.number
      %td 
        = ticket.last_name
      %td 
        = ticket.first_name
      %td 
        = ticket.middle_name
      %td 
        = ticket.start_station.title
      %td 
        = ticket.end_station.title
      %td
        = link_to 'Показать', [:admin, ticket]
      %td
        = link_to 'Редактировать', edit_admin_ticket_path(ticket)
      %td
        = link_to 'Удалить', [:admin, ticket], method: :delete, data: { confirm: 'Вы уверены?' }
%br
