%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group.row
    = f.label :email, class: "col-2 col-form-label"
    .col-10
      = f.email_field :email, autofocus: true, class: "form-contol"
  .form-group.row
    = f.label :first_name, class: "col-2 col-form-label"
    .col-10
      = f.text_field :first_name, class: "form-contol"
  .form-group.row
    = f.label :last_name, class: "col-2 col-form-label"
    .col-10
      = f.text_field :last_name, class: "form-contol"
  .form-group.row
    = f.label :password, class: "col-2 col-form-label"
    .col-10
      = f.password_field :password, autocomplete: "off", class: "form-contol"
  .form-group.row
    = f.label :password_confirmation, class: "col-2 col-form-label"
    .col-10
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-contol"
  .actions
    = f.submit "Sign up", class: 'btn btn-primary'
= render "devise/shared/links"
